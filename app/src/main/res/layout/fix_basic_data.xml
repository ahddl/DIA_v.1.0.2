<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:onClick="onButtonClick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".InputBasicData">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_basic"
        style="@style/Widget.AppCompat.Button"
        android:background="@drawable/button_background"
        android:layout_width="79dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="30dp"
        android:text="Back"
        android:textSize="11sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Linear1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본 정보 수정"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="40sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="64dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/Linear1"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:id="@+id/basic_act1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/confirm_btn_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> 키       "
                android:layout_marginEnd="20sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/height"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="단위 cm 입니다."
                android:inputType="number"
                android:textSize="11sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/basic_act2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/confirm_btn_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> 몸무게"
                android:layout_marginEnd="20sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="단위 kg 입니다."
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/basic_act3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/confirm_btn_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> 만나이"
                android:layout_marginEnd="20sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/age"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="만 나이 입니다."
                android:inputType="number"
                android:textSize="11sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/basic_act4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/confirm_btn_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="> 성별"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="246dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gender_female"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background_selector"
                android:text="여"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gender_male"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/button_background_selector"
                android:text="남"
                android:textColor="@color/white" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/basic_act5"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/confirm_btn_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:text="> 당뇨병 타입"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="246dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/type_1"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button_background_selector"
                    android:text="1형"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/type_2"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button_background_selector"
                    android:text="2형"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/type_preg"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button_background_selector"
                    android:text="임신성"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/type_other"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_background_selector"
                    android:text="기타"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="이메일 수신에 동의합니다."
            android:textSize="11sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveInfo"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:text="저장"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"/>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>